    from PIL import Image, ImageDraw, ImageFont
    import os

    # Create a new image with a transparent background
    width, height = 400, 200
    image = Image.new('RGBA', (width, height), (0, 0, 0, 0))

    # Get a drawing context
    draw = ImageDraw.Draw(image)

    # Try to use a fancy font; fallback to default if not available
    try:
        font = ImageFont.truetype("arial.ttf", 40)  # Adjust path if needed
    except IOError:
        font = ImageFont.load_default()

    # Draw the text with a gradient or shadow for fanciness
    text = "WOLVCAPITAL INVEST"
    bbox = draw.textbbox((0, 0), text, font=font)
    text_width = bbox[2] - bbox[0]
    text_height = bbox[3] - bbox[1]
    x = (width - text_width) // 2
    y = (height - text_height) // 2

    # Add a shadow
    shadow_color = (100, 100, 100, 128)
    draw.text((x+2, y+2), text, font=font, fill=shadow_color)

    # Main text in gold gradient (simplified)
    text_color = (255, 215, 0)  # Gold
    draw.text((x, y), text, font=font, fill=text_color)

    # Save the image
    output_path = "/workspaces/solid-succotash/static/images/logos/logo.png"
    os.makedirs(os.path.dirname(output_path), exist_ok=True)
    image.save(output_path, "PNG")